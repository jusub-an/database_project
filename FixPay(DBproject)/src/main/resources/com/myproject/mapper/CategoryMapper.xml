<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myproject.mapper.CategoryMapper">
    
    <select id="getList" resultType="com.myproject.domain.CategoryVO">
        SELECT * FROM Category
        WHERE user_id = #{user_id} OR user_id IS NULL
        ORDER BY user_id DESC, name ASC
    </select>
    
    <select id="get" resultType="com.myproject.domain.CategoryVO">
        SELECT * FROM Category WHERE category_id = #{category_id}
    </select>
    
    <insert id="register">
        <selectKey keyProperty="category_id" order="BEFORE" resultType="long">
            select seq_category.nextval from dual
        </selectKey>
        
        INSERT INTO Category (category_id, name, user_id)
        VALUES (#{category_id}, #{name}, #{user_id})
    </insert>
    
    <delete id="delete">
        DELETE FROM Category WHERE category_id = #{category_id}
    </delete>
    
</mapper>