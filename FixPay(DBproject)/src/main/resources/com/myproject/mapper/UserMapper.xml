<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myproject.mapper.UserMapper">
    
    <insert id="register">
        <selectKey keyProperty="user_id" order="BEFORE" resultType="long">
            select seq_user.nextval from dual
        </selectKey>
        
        insert into Users (user_id, email, password, nickname)
        values (#{user_id}, #{email}, #{password}, #{nickname})
    </insert>
    
    <select id="get" resultType="com.myproject.domain.UserVO">
        select * from Users where email = #{email}
    </select>
    
    <select id="idCheck" resultType="int">
        select count(*) from Users where email = #{email}
    </select>
    
</mapper>